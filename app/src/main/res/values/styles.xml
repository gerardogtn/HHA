<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="HhaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:icon">@color/icons</item>
    </style>
    <style name="HhaTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="HhaTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
